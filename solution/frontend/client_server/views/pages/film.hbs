<!DOCTYPE html>
<html lang="en">
<body class="min-vh-100 d-flex flex-column vsc-initialized">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-film me-2"></i>
                Movie Platform
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-fill me-1"></i>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/statistics">
                            <i class="bi bi-graph-up me-1"></i>
                            Statistics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/community">
                            <i class="bi bi-people-fill me-1"></i>
                            Community
                        </a>
                    </li>
                </ul>
                <form class="d-flex" action="/search" method="GET">
                    <div class="input-group">
                        <input class="form-control" type="search" name="query" placeholder="Search movies..." 
                               aria-label="Search" required>
                        <button class="btn btn-outline-light" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div style="margin-top: 76px;"></div>
    <main class="flex-grow-1">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ movie.poster }}" class="img-fluid rounded" alt="{{ movie.title }} poster">
                </div>
                <div class="col-md-8">
                    <h1>{{ movie.title }}</h1>
                    <p class="lead">{{ movie.tagline }}</p>
                    <div class="mb-3">
                        <span class="badge bg-primary me-2">Rating: {{ movie.rating }}</span>
                        <span class="badge bg-secondary me-2">{{ movie.year }}</span>
                        <span class="badge bg-info">{{ movie.duration }} min</span>
                    </div>
                    <h3>Overview</h3>
                    <p>{{ movie.description }}</p>
                    <!-- Cast Carousel -->
                    <h3>Cast</h3>
                    <div id="castCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-wrap="true">
                        <div class="carousel-inner">
                            {{#each (group cast 4)}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <div class="row">
                                    {{#each this}}
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">{{ this.name }}</h6>
                                                <p class="card-text small">{{ this.character }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#castCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#castCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <!-- Crew Carousel -->
                    <h3>Crew</h3>
                    <div id="crewCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-wrap="true">
                        <div class="carousel-inner">
                            {{#each (group crew 4)}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <div class="row">
                                    {{#each this}}
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="card-title">{{ this.name }}</h6>
                                                <p class="card-text small">{{ this.job }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#crewCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#crewCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            <!-- New Oscars Section -->
            <div class="row mt-4">
                <div class="col-12">
                    <h3>Oscar Awards</h3>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Year</th>
                                    <th>Result</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each oscars}}
                                <tr>
                                    <td>{{ this.category }}</td>
                                    <td>{{ this.year }}</td>
                                    <td>{{ this.result }}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-12">
                    <h3>Reviews</h3>
                    {{#each reviews}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ this.title }}</h5>
                            <p class="card-text">{{ this.content }}</p>
                            <p class="card-text"><small class="text-muted">Posted by {{ this.author }}</small></p>
                        </div>
                    </div>
                    {{/each}}
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addReviewModal">
                        Add Review
                    </button>
                </div>
            </div>
        </div>
        <!-- Add Review Modal -->
        <div class="modal fade" id="addReviewModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Review</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="reviewForm">
                            <div class="mb-3">
                                <label class="form-label">Rating</label>
                                <select class="form-select" required>
                                    <option value="5">5 - Excellent</option>
                                    <option value="4">4 - Very Good</option>
                                    <option value="3">3 - Good</option>
                                    <option value="2">2 - Fair</option>
                                    <option value="1">1 - Poor</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Review</label>
                                <textarea class="form-control" rows="3" required></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Submit Review</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {{> chat movieId=movie.id }}
</body>
</html>