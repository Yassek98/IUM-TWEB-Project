<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Reviews</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
</head>
<body>
  <div class="container">
    <h1>Benvenuto nel sito del Cinema!</h1>
    <button class="btn btn-primary" onclick="fetchFilms()">Carica films</button>
    <ul id="film-list" class="list-group mt-3"></ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    async function fetchFilms() {
      const res = await axios.get('/api/films');
      const films = res.data;
      const ul = document.getElementById('film-list');
      ul.innerHTML = '';
      films.forEach(f => {
        const li = document.createElement('li');
        li.className = 'list-group-item';
        li.innerText = f.title;
        ul.appendChild(li);
      });
    }
  </script>
</body>
</html>
